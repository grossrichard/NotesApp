<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recipe_list_fragment">

    <fragment
        android:id="@+id/recipe_list_fragment"
        android:name="com.example.notesapp.view.NotesListFragment"
        tools:layout="@layout/fragment_note_list">

        <action
            android:id="@+id/navigate_recipe_list_to_recipe_detail"
            app:destination="@+id/recipe_detail_fragment">
            <argument
                android:name="recipeId"
                android:defaultValue="@null"
                app:argType="string"
                app:nullable="true" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/recipe_detail_fragment"
        android:name="com.example.notesapp.view.NoteDetailFragment"
        tools:layout="@layout/fragment_note_detail">
        <argument
            android:name="recipeId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>


