<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Text" parent="AppTheme" />
    <!-- ******************************************************* -->

    <style name="Text.RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.RobotoRegular.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoRegular.White.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.RobotoRegular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.RobotoRegular.Black.16">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- ******************************************************* -->

    <style name="Text.RobotoMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.RobotoMedium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoMedium.White.12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoMedium.White.14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoMedium.White.16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoMedium.White.24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style><!-- ******************************************************* -->

    <style name="Text.RobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.RobotoBold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.RobotoBold.White.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.RobotoBold.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.RobotoBold.Blue.18">
        <item name="android:textSize">18sp</item>
    </style>


    <!-- ******************************************************* -->

    <style name="Text.RobotoItalic">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style><!-- ******************************************************* -->

    <style name="Text.RobotoLight">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style><!-- ******************************************************* -->

    <style name="Text.RobotoLightItalic">
        <item name="android:fontFamily">@font/roboto_lightitalic</item>
    </style><!-- ******************************************************* -->


    <style name="Text.Black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Bold.Blue.16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Bold.Blue.18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    
</resources>
